#include "holberton.h"
/**
 * _isalpha - checks for alphabetic character
 * @c: The character input
 * Returns:
 * Return 1 if c is a letter, lowercase or uppercase
 * Return 0 otherwise.
 */
int _isalpha(int c)
{
	char i;
	char j;

	for(i = 'a'; i <= 'z'; i++)
	{
		lowercaser = i;
		if (lowercase == c)
		{
			return (1);
		} else
		{
			for(j = 'A'; j <= 'Z'; j++)
			{
				uppercase = j;
				if (uppercase == c)
				{
					return (1);
				}
			}
		}
	}
	return (0);
}
